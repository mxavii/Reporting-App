
{% extends 'templates/default.twig' %}

{% block title %} Group {% endblock %}

{% block current %} Pencarian {% endblock %}

{% block content %}
<div id="content" style="margin-left: 0px;">
<div class="container-fluid"><hr>
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box widget-chat">
        <div class="widget-title"> <span class="icon"> <i class="icon-comment"></i> </span>
          <h5>Let's do a chat</h5>
        </div>
        <div class="widget-content nopadding">
          <div class="chat-users panel-right2">
            <div class="panel-title">
              <h5>Online Users</h5>
            </div>
            <div class="panel-content nopadding">
                <ul class="contact-list">
                <li id="user-Alex" class="online"><a href="">
                    <img width="40" height="40" alt="User"
                       src="{{ base_url() }}/assets/images/avatar.png"> <span>Alex</span></a></li>
                <li id="user-Linda"><a href="">
                    <img width="40" height="40" alt="User"
                       src="{{ base_url() }}/assets/images/avatar.png"> <span>Linda</span></a></li>
                <li id="user-John" class="online new"><a href=""><img alt="" src="img/demo/av3.jpg" /> <span>John</span></a><span class="msg-count badge badge-info">3</span></li>
                <li id="user-Mark" class="online"><a href=""><img alt="" src="img/demo/av4.jpg" /> <span>Mark</span></a></li>
                <li id="user-Maxi" class="online"><a href=""><img alt="" src="img/demo/av5.jpg" /> <span>Maxi</span></a></li>
              </ul>
            </div>
          </div>
          <div class="chat-content panel-left2">
            <div class="chat-messages" id="chat-messages">
              <div id="chat-messages-inner"></div>
            </div>
            <div class="chat-message well">
              <button class="btn btn-success">Send</button>
              <span class="input-box">
              <input type="text" name="msg-box" id="msg-box" />
              </span> </div>
          </div>
        </div>
      </div>
    </div>
</div>
  </div>
</div>

{% endblock %}
{% block js %}
<script src="{{ base_url() }}/js/jquery.min.js"></script>
<script src="{{ base_url() }}/js/jquery.ui.custom.js"></script>
<script src="{{ base_url() }}/js/bootstrap.min.js"></script>
<script src="{{ base_url() }}/js/matrix.js"></script>
<script src="{{ base_url() }}/js/matrix.chat.js"></script>
{% endblock %}
