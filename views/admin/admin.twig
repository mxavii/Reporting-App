    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Dashboard</h3>
    </div>
    <div class="panel-body">
        <div class="col-md-3" >
            <div class="well dash-box" style="background:#c8b400;">
                <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> 203</h2>
                <h4>User</h4>
                <a href="{{ path_for('admin.user.list') }}" class="">Selengkapnya... </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well dash-box" style="background:#c80012;">
                <h2><span class="icon-group" aria-hidden="true"></span> 12</h2>
                <h4>Grup</h4>
                <a href=" {{ path_for('admin.group.list') }} " class="">Selengkapnya... </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well dash-box" style="background:#00b6c8;">
                <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 33</h2>
                <h4>Item</h4>
                <a href=" {{ path_for('admin.item.list') }} " class="">Selengkapnya... </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well dash-box" style="background:blue">
                <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> 12,334</h2>
                <h4>Wali</h4>
                <a href=" {{ path_for('admin.guard.list') }} " class="">Selengkapnya... </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}