{% extends 'templates/default.twig' %}

{% block title %} Cari Grup {% endblock %}

{% block current %} Cari Grup {% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <a class="list-group-item active main-color-bg">
                <span align="center" aria-hidden="true"><i class="icon-file"></i></span>&nbsp; Cari Grup
            </a>
            <div class="box box-primary">
                <div style="padding-bottom:20px;"class="box-header">
                    <div id="panel1">
                        <br>
                        {% for data in data %}
                        <div class="col-sm-2 col-md-3">
                			<div class="panel box-body">
                                {% if data.image is defined %}
                                <center><h1>
                                    <img src="{{ base_url() }}/assets/images/group.jpg"
                                    height="151" width="151" style="margin-bottom:5px" alt="{{ data.name }}"></h1></center>
                                    {% else %}
                			<center><h1>
                                <img src="{{ base_url() }}/assets/images/{{ data.image }}"
                				 height="151" width="151" style="margin-bottom:5px" alt="{{ data.name }}"></h1></center>
                                 {% endif %}
                			  	<div class="caption">
                                    <div class="col-lg-12">
                						<hr>
                                        <p class="text-left">
                                            <b>Nama  : </b> {{data.name}}<br><br>
                                            <b>Deskripsi : </b> {{data.description}}<br>
                                        </p>
                						<br>
                                        <center>
                							<a href="{{ path_for('web.request.group', {('group'):data.id }) }}">
                								<button class="btn btn-primary btn-info btn-md"
                								style="margin-left:10px;"><b>Kirim Permintaan</b></button></a>
                                        </center>
                						<hr>
                                    </div>
                			  	</div>
                			</div>
                	  	</div>
                	{% endfor %}
                </div>
                	{% if data == null %}
                	<hr style="margin-top:10px;margin-bottom:10px;" >
                	<p align="center" style="color:red">Grup tidak ditemukan</p>
                	<hr style="margin-top:10px;margin-bottom:10px;" >
                	{% endif %}
                    <!-- </ul> -->
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
