{% extends 'templates/default.twig' %}

{% block title %} Ubah password {% endblock %}
{% block current %} Ubah password {% endblock %}
{% block content %}

<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <a class="list-group-item active main-color-bg">
              <span align="center" aria-hidden="true"><i class="icon-file"></i>
              </span><i class="fa fa-cogs"></i>&nbsp; Ganti kata sandi
            </a>
              <div class="box box-primary">
                <div style="padding:10px 30px 20px 30px;" class="box-header">

         <form action="{{ path_for('post.change.password') }}" method="POST">
         <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                    <label>Password Lama:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-eye"></i>
                        </div>
                        <input type="password" class="form-control input-medium bfh-password"
                         name="password" value="" placeholder="Password lama">
                    </div>
                    {% if errors.password %}
                        <span class="help-block">{{errors.password | first}}</span>
                    {% endif %}
                </div>
             <div class="form-group {{ errors.new_password ? 'has-error' : '' }}">
                    <label>Password Baru:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-eye-slash"></i>
                        </div>
                        <input type="password" class="form-control input-medium bfh-password"
                         name="new_password" value="" placeholder="Password baru">
                    </div>
                    {% if errors.new_password %}
                        <span class="help-block">{{errors.new_password | first}}</span>
                    {% endif %}
                </div>
                 <div class="form-group {{ errors.new_password ? 'has-error' : '' }}">
                    <label>Ulangi Password Baru:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-eye-slash"></i>
                        </div>
                        <input type="password" class="form-control input-medium bfh-password"
                         name="confirm_password" value="" placeholder="Ulangi password">
                    </div>
                    {% if errors.new_password %}
                        <span class="help-block">{{errors.new_password | first}}</span>
                    {% endif %}
                </div>
                <div class="">
                    <button type="submit" class="btn btn-tumblr" style="margin:10px">
                        <i class="fa fa-check-square-o"></i> Ubah</button>
                        <a style="margin:10px"class="btn btn-social-button btn-github pull-right"
                        href=" {{path_for('user.update.profile', {('id'):login.id})}} ">
                        <i class="fa fa-times-circle"></i> Batalkan</a>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
